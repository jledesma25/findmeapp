<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context="app.imast.com.findingme.ui.fragments.LostPetInfoFragment">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_queue"
        android:layout_marginRight="4dp"
        android:layout_gravity="right"
        app:fabSize="normal" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/petPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:stretchColumns="1"
            android:layout_gravity="center_horizontal">
            <TableRow>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Nombre de Mascota" />
                <TextView
                    android:padding="5dp"
                    android:id="@+id/txvPetName"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Sexo"/>
                <TextView
                    android:padding="5dp"
                    android:id="@+id/txvPetSex"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Tipo"/>
                <TextView
                    android:padding="5dp"
                    android:id="@+id/txvPetType"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Raza"/>
                <TextView
                    android:padding="5dp"
                    android:id="@+id/txvPetRace"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Edad"/>
                <TextView
                    android:padding="5dp"
                    android:id="@+id/txvPetAge"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Vacunado"/>
                <TextView
                    android:padding="5dp"
                    android:id="@+id/txvPetVaccinated"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Mi Información"/>
                <TextView
                    android:padding="5dp"
                    android:id="@+id/txvPetInfo"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Información de perdida"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_span="2"
                    android:padding="5dp"
                    android:id="@+id/txvPetLostInfo"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="última Ubicación"/>
                <ImageButton
                    android:padding="5dp"
                    android:src="@drawable/ic_action_gps"
                    android:id="@+id/btnlastLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>



    </ScrollView>

</LinearLayout>
